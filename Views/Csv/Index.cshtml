@model IEnumerable<CsvDataManager.Models.Persons>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "CSV Data List";
}

<div class="container">
    <h2 class="mt-4">@ViewData["Title"]</h2>
    <a asp-action="Import" class="btn btn-primary mt-4">Import CSV</a>
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Surname</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Mobile</th>
                <th>Active</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>@item.Mobile</td>
                    <td>@item.IsActive</td>
                    <td>
                        <a href="@Url.Action("Edit","Csv",new { id = item.Id })" class="btn btn-secondary">Edit</a>
                        <a href="@Url.Action("Delete","Csv",new { id = item.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
