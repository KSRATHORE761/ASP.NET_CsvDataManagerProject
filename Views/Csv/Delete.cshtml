@model CsvDataManager.Models.Persons
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete CSV Data";
}

<div class="container">
    <h2 class="mt-4">@ViewData["Title"]</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>CSV Data</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@Model.FirstName</dd>
            <dt class="col-sm-2">Surname</dt>
            <dd class="col-sm-10">@Model.LastName</dd>
            <dt class="col-sm-2">Age</dt>
            <dd class="col-sm-10">@Model.Age</dd>
            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@Model.Gender</dd>
            <dt class="col-sm-2">Mobile</dt>
            <dd class="col-sm-10">@Model.Mobile</dd>
        </dl>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
